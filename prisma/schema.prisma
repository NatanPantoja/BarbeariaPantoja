
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  PROFISSIONAL
  RECEPCIONISTA
  CLIENTE
}


enum StatusAgendamento {
  AGENDADO
  CONFIRMADO 
  EM_ATENDIMENTO 
  CONCLUIDO 
  CANCELADO 
  NAO_COMPARECEU 
}


model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  phone     String? 
  role      Role     @default(CLIENTE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  //  Campos para recuperação de senha
  passwordResetToken   String?
  passwordResetExpires DateTime?

  
  perfilProfissional Profissional?


  agendamentosComoCliente Agendar[] @relation("ClienteDoAgendamento")

  @@map("users")
}


model Profissional {
  id        String   @id @default(uuid())
  name      String 
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

 
  agendamentosRealizados Agendar[] @relation("ProfissionalDoAgendamento")

  @@map("profissionais")
}


model Servico {
  id          String   @id @default(uuid())
  name        String
  price       Float
  duration    Int // Duração em minutos do serviço
  description String?
  banner      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  agendamentos Agendar[]

  @@map("servicos")
}


model Agendar {
  id        String            @id @default(uuid())
  date      DateTime
  status    StatusAgendamento @default(AGENDADO)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  // O cliente que está agendando (que é um User)
  cliente   User   @relation("ClienteDoAgendamento", fields: [clienteId], references: [id])
  clienteId String

  // O profissional que vai atender
  profissional   Profissional @relation("ProfissionalDoAgendamento", fields: [profissionalId], references: [id])
  profissionalId String

  // O serviço que será realizado
  servico   Servico @relation(fields: [servicoId], references: [id])
  servicoId String

  @@map("agendamentos")
}
